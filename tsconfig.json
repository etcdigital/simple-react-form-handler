{
	"compilerOptions": {
		"sourceMap": false,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": ["ES2020"],
		"module": "ESNext",
		"target": "ES2020",
		"outDir": "./dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "./dist/@types",
		"jsx": "react"
	},
	"include": ["./src/"]
}
